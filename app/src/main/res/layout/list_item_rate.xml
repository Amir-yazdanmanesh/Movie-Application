<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/steel_grey_light"
    android:padding="8dp"
    tools:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSourceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/texta_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Leonardo di Caprio" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/texta_regular"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/french_grey"
        android:textSize="@dimen/text_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSourceName"
        tools:text="Leonardo di Caprio" />

</androidx.constraintlayout.widget.ConstraintLayout>